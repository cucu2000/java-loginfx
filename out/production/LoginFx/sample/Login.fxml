<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.LoginController">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <Pane prefHeight="350.0" prefWidth="350.0">
         <children>
            <Label layoutX="14.0" layoutY="14.0" text="Login">
               <font>
                  <Font size="36.0" />
               </font>
            </Label>
            <Label layoutX="44.0" layoutY="83.0" text="Username/Email" />
            <Label layoutX="44.0" layoutY="144.0" text="Password" />
            <TextField fx:id="txtUsername" layoutX="43.0" layoutY="108.0" prefHeight="25.0" prefWidth="273.0" />
            <PasswordField fx:id="txtPassword" layoutX="43.0" layoutY="175.0" prefHeight="25.0" prefWidth="273.0" />
            <Button fx:id="btnLogin" layoutX="149.0" layoutY="223.0" mnemonicParsing="false" onAction="#login" text="Login" />
            <Button fx:id="btnSignup" layoutX="32.0" layoutY="298.0" mnemonicParsing="false" onAction="#signup" text="Signup" />
         </children>
      </Pane>
   </children>
</GridPane>
